{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["esnext", "dom", "es2018"],

        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noResolve": false,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": false,
        "removeComments": true,
        "preserveConstEnums": true,

        "sourceMap": true,
        "inlineSourceMap": false,

        "allowSyntheticDefaultImports": false,

        "rootDir": "source/client",
        "outDir": "distribution",
        "baseUrl": "source/client",

        "types": [
            "jest",
            "webpack-env",
            "webpack",
            "node"
        ],
    },
    "include": [
        "source/client/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
