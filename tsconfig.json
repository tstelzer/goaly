{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "lib": ["es6", "dom", "es2017"],

        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noResolve": false,
        "noEmitOnError": true,
        "noFallthroughCasesInSwitch": true,
        "allowJs": false,
        "removeComments": true,
        "preserveConstEnums": true,

        "sourceMap": false,
        "inlineSourceMap": true,

        "allowSyntheticDefaultImports": false,

        "rootDir": "src",
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "*": [
                "*"
            ]
        },

        "types": []
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
